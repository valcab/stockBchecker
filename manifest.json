{
  "manifest_version": 3,
  "name": "B-Stock Beacon",
  "version": "2.0.0",
  "description": "Check if Stock B items are available on Thomann pages",
  "permissions": ["activeTab", "scripting", "storage", "alarms", "notifications"],
  "host_permissions": [
    "https://www.thomann.de/*",
    "https://thomann.de/*",
    "https://www.thomann.fr/*",
    "https://thomann.fr/*",
    "https://www.thomann.com/*",
    "https://thomann.com/*",
    "https://www.thomann.es/*",
    "https://thomann.es/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "B-Stock Beacon"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.thomann.de/*",
        "https://thomann.de/*",
        "https://www.thomann.fr/*",
        "https://thomann.fr/*",
        "https://www.thomann.com/*",
        "https://thomann.com/*",
        "https://www.thomann.es/*",
        "https://thomann.es/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
